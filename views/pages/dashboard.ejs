<%- include('../includes/head.ejs') -%>

<body ng-controller="dashboardController">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                    <h2>Polling List</h2>
            </div>
            <div class="col-md-4">
                <button>Add Question</button> 
            </div>     
                
        </div>
        
        <div ng-repeat="question in questions">
            <hr>
            <p><strong>Q.NO:{{$index}} {{question.question}}</strong></p>
            <div ng-repeat="answer in answers">
                <div ng-if="answer.queId==question.id">
                    <p>{{answer.answer}}</p>
                    <i class="fa fa-thumbs-up" aria-hidden="true"></i>
                </div>

            </div>

        </div>

    </div>

